# Core
ENV=development
LOG_LEVEL=INFO

# MongoDB (provided by unified_connector_database container)
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB=unified_connector

# Security
ENCRYPTION_KEY=CHANGE_ME_32_CHAR_MIN

# API Meta and CORS
API_TITLE=Unified Connector Backend
API_DESCRIPTION=Unified connector platform API for managing integrations (Jira, Confluence, ...)
API_VERSION=0.1.0
CORS_ALLOW_ORIGINS=*
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# OAuth (stubs)
JIRA_CLIENT_ID=
JIRA_CLIENT_SECRET=
JIRA_REDIRECT_URI=http://localhost:3001/connectors/jira/oauth/callback

CONFLUENCE_CLIENT_ID=
CONFLUENCE_CLIENT_SECRET=
CONFLUENCE_REDIRECT_URI=http://localhost:3001/connectors/confluence/oauth/callback

# Tenancy
DEFAULT_TENANT_ID=public
TENANT_HEADER_NAME=X-Tenant-ID
